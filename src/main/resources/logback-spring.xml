<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Main Application Log File -->
    <appender name="APPLICATION_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Separate Events Log File -->
    <appender name="EVENTS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/events.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/events.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Separate Exceptions Log File -->
    <appender name="EXCEPTIONS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/exceptions.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/exceptions.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>
    
    <!-- Cluster Events Logger -->
    <logger name="com.eventstreaming.cluster" level="DEBUG" additivity="false">
        <appender-ref ref="EVENTS_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Event Processing Logger -->
    <logger name="com.eventstreaming.cluster.ClusterUserActor" level="INFO" additivity="false">
        <appender-ref ref="EVENTS_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Event Controller Logger -->
    <logger name="com.eventstreaming.cluster.ClusterController" level="INFO" additivity="false">
        <appender-ref ref="EVENTS_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Exception Logger for all packages -->
    <logger name="com.eventstreaming" level="ERROR" additivity="false">
        <appender-ref ref="EXCEPTIONS_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Pekko Cluster Logging -->
    <logger name="org.apache.pekko.cluster" level="INFO" additivity="false">
        <appender-ref ref="EVENTS_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="APPLICATION_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>
    
    <!-- Profile-specific configurations -->
    <springProfile name="isolated">
        <!-- Enhanced logging for isolated testing -->
        <logger name="com.eventstreaming" level="DEBUG"/>
    </springProfile>
    
    <springProfile name="production">
        <!-- Reduced console logging for production -->
        <root level="WARN">
            <appender-ref ref="APPLICATION_FILE"/>
        </root>
    </springProfile>
</configuration>